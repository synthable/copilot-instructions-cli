{
  "name": "copilot-instructions-cli",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "main": "dist/index.js",
  "bin": {
    "copilot-instructions": "dist/index.js"
  },
  "author": "synthable",
  "license": "GPL-3.0-or-later",
  "description": "A CLI tool for composing, managing, and building modular AI assistant instructions.",
  "homepage": "https://github.com/synthable/copilot-instructions-cli",
  "bugs": {
    "url": "https://github.com/synthable/copilot-instructions-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/synthable/copilot-instructions-cli.git"
  },
  "keywords": [
    "ai",
    "copilot",
    "instructions",
    "cli",
    "persona"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc --pretty",
    "start": "node dist/index.js",
    "test": "vitest run --run",
    "dev": "tsc -w",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:src": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:fix:src": "eslint src/**/*.ts --fix",
    "lint:md": "markdownlint \"docs/**/*.md\"",
    "format": "prettier --write 'src/**/*.{ts,js,json,md,test.ts}'",
    "format:docs": "prettier --write 'docs/**/*.md'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json,md,test.ts}' && npm run format:check:docs",
    "format:check:src": "prettier --check 'src/**/*.{ts,js,json,md,test.ts}'",
    "format:check:docs": "prettier --check 'docs/**/*.md'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "pretest": "npm run typecheck",
    "prebuild": "npm run clean",
    "prepare": "husky",
    "pre-commit": "npm run typecheck && npx lint-staged",
    "pre-push": "npm run typecheck && npm test && npm run lint && npm run build",
    "quality-check": "npm run typecheck && npm run lint && npm run format:check && npm test"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "jsonc-parser": "^3.3.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
