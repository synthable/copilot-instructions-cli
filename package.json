{
  "name": "copilot-instructions-cli",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "copilot-instructions": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --pretty",
    "start": "node dist/index.js",
    "test": "vitest run --run",
    "dev": "tsc -w",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,md,test.ts}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json,md,test.ts}'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "pretest": "npm run typecheck",
    "prebuild": "npm run clean",
    "prepare": "husky",
    "pre-commit": "npm run typecheck && npx lint-staged",
    "pre-push": "npm run typecheck && npm test && npm run lint && npm run build",
    "quality-check": "npm run typecheck && npm run lint && npm run format:check && npm test"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "ai",
    "copilot",
    "instructions",
    "cli"
  ],
  "author": "synthable",
  "license": "MIT",
  "description": "A CLI for building and managing AI persona instructions from modular files.",
  "dependencies": {
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "jsonc-parser": "^3.3.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
