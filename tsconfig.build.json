{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Production optimizations
    "sourceMap": false,
    "declarationMap": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Build specific
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",

    // Test files
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "test/**/*",
    "__tests__/**/*",

    // Development files
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.dev.ts",
    "**/*.dev.js",

    // Documentation and config
    "docs/**/*",
    "coverage/**/*",
    "*.config.js",
    "*.config.ts",
    "jest.config.*",
    "eslint.config.*",
    "prettier.config.*",

    // Example and template files
    "examples/**/*",
    "templates/**/*"
  ]
}
