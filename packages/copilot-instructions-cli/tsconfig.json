{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // --- Monorepo Linking ---
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    // --- Package-Specific Output ---
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    // --- More Lenient App Rules ---
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../ums-lib"
    }
  ]
}
