{
  "name": "copilot-instructions-cli",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "main": "dist/index.js",
  "bin": {
    "copilot-instructions": "dist/index.js"
  },
  "author": "synthable",
  "license": "GPL-3.0-or-later",
  "description": "A CLI tool for composing, managing, and building modular AI assistant instructions using UMS v1.0.",
  "homepage": "https://github.com/synthable/copilot-instructions-cli/tree/main/packages/copilot-instructions-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/synthable/copilot-instructions-cli.git",
    "directory": "packages/copilot-instructions-cli"
  },
  "keywords": [
    "ai",
    "copilot",
    "instructions",
    "cli",
    "persona",
    "ums",
    "unified-module-system"
  ],
  "scripts": {
    "build": "tsc --build --pretty",
    "test": "vitest run --run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "pretest": "npm run typecheck",
    "prebuild": "npm run clean",
    "quality-check": "npm run typecheck && npm run lint && npm run format:check && npm test"
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "ora": "^8.2.0",
    "tsx": "^4.20.6",
    "ums-lib": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
