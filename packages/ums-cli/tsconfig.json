{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // --- Monorepo Linking ---
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    // --- Package-Specific Output ---
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../ums-lib"
    }
  ]
}
